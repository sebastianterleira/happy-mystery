    const rickrollVideo = document.getElementById('rickrollVideo') as HTMLVideoElement;
    const axolotVideo = document.getElementById('axolotVideo') as HTMLVideoElement;
    const marceloVideo = document.getElementById('marceloVideo') as HTMLVideoElement;
    const dotaVideo = document.getElementById('dotaVideo') as HTMLVideoElement;
    const billWellMeetAgainAudio = document.getElementById('billWellMeetAgainAudio') as HTMLAudioElement;
    const billWellMeetAgainVideo = document.getElementById('billWellMeetAgainVideo') as HTMLVideoElement;

    if (!codes[input]) {
      // Si el código es incorrecto
      playErrorSound();
      resetBlinkEffect(false);
      document.getElementById("result").innerText = result;
    } else if (input === "MYSTERY") {
        resetBlinkEffect(true);
        document.getElementById("result").innerText = result;

---
import Image from "astro/components/Image.astro";

import Baby from "../assets/images/baby.jpeg";
import Yoyo from "../assets/images/yoyo.jpg";
import Resurrection from "../assets/images/resurrection.png";
import NotApproved  from "../assets/images/notApproved.png";
import Lamar from "../assets/images/lamar.jpg"
import Scientist from "../assets/images/scientist.webp"
import HL3 from "../assets/images/HL3.jpg"
import SadleysBar from "../assets/images/OSADLEYSLOGO.png"
---

<div id="imageContainer">
  <audio src="/sounds/content-unreveal.mp3" id="content-unreveal"></audio>
  <div class="wrapper__content">
    <div class="close__container">
      <button class="closeBtn closeBtn__styles">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="icon-cancel icon__cancel_styles">
          <path d="M20 20L4 4m16 0L4 20" stroke="#fff"></path>
        </svg>
      </button>
    </div>
    <div class="Image">
      <Image src={Baby} width={400} height={390} alt="baby bill cipher" id="babyBillImage" loading="eager" class="imagen"/>
      <Image src={Yoyo} width={400} height={390} alt="yoyolafrenchie" id="yoyoImage" loading="eager" class="imagen"/>
      <Image src={Resurrection} width={510} height={410} alt="boleto para resurreciÃ³n gratis" id="resurrectionImage" loading="eager" class="imagen"/>
      <Image src={NotApproved} width={690} height={480} alt="NOT S&P APPROVED, WASH YOUR MOUNTh OUT WITH SOAP!" id="notApproved" loading="eager" class="notApproved"/>
      <Image src={Lamar} width={400} height={390} alt="Es lamar, el headcrab mas importante!" id="lamarImage" loading="eager" class="imagen"/>
      <Image src={Scientist} width={400} height={390} alt="Stahpppp!, Dargh!" id="scientistImage" loading="eager" class="imagen"/>
      <Image src={HL3} width={450} height={400} alt="I want to believe" id="hl3Image" loading="eager" class="imagen"/>
      <Image src={SadleysBar} width={450} height={400} alt="Sadleys" id="sadleysBar" loading="eager" class="imagen"/>
    </div>
    <p id="text-image"></p>
    <div class="close__container-bottom" id="close__container-bottom">
      <button class="closeBtn closeBtn__styles-bottom">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="icon-cancel icon__cancel_styles-bottom">
        <path d="M20 20L4 4m16 0L4 20" stroke="#fff"></path>
      </svg>
      <p class="text__button">CLOSE</p>
      </button>
    </div>
  </div>
</div>

<script>
  const closeBtns = document.getElementsByClassName('closeBtn');
  const buttonCloseBottom = document.getElementById('close__container-bottom') as HTMLButtonElement;
  const imageContainer = document.getElementById('imageContainer') as HTMLDivElement;
  const contentUnrevealSound = document.getElementById('content-unreveal') as HTMLAudioElement;
  const imagenes = document.querySelectorAll('img');

  Array.from(closeBtns).forEach((closeBtn) => {
    (closeBtn as HTMLButtonElement).addEventListener('click', () => {
      buttonCloseBottom.classList.remove("not-display");
      contentUnrevealSound.volume = 1;
      contentUnrevealSound.play();
      imageContainer.style.display = 'none';
      imagenes.forEach((imagen) => {
        imagen.classList.remove('visible'); 
      })
    });
  })
</script>

<style>
  .wrapper__content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: clamp(90%, 2vw, 40%);
    width: 100%;
    height: 100%;
  }

  .close__container {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    width: 100%;
  }

  .close__container-bottom {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 2rem;
  }

  .closeBtn__styles {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.125rem;
    height: 3.125rem;
    border-radius: 8px;
    border: 1px #fff solid;
    background-color: #000;
    cursor: pointer;
    transition: all .15s ease-out;
    color: #fff;
  }

  .closeBtn__styles-bottom {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: .5rem;
    border-radius: 5px;
    background-color: #000;
    cursor: pointer;
    border: 2px solid white;
    padding: .6rem 1rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
    width: -moz-fit-content;
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
    transition: all .15s ease-out;
  }

  .text__button {
    font-size: 1.5rem;
    color: #fff;
    font-weight: 700;
    font-family: Consolas;
  }

  .closeBtn:hover {
    background-color: #fff;
    color: #000;
  }

  .closeBtn:hover .icon-cancel {
    filter: invert(1);
  }

  .closeBtn:hover .text__button {
    color: #000;
  }

  .icon__cancel_styles {
    width: 25px;
    height: 25px;
    transition: all 0.3s ease;
  }

  .icon__cancel_styles-bottom {
    width: 15px;
    height: 15px;
    stroke-width: 5;
    transition: all 0.3s ease;
  }

  .Image {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  #text-image { 
    text-align: center;
    font-size: 2.25rem;
    line-height: 2.5rem;
    font-family: Kidwriting Pro;
    color: #fff;
    margin-top: .5rem;
    text-wrap: wrap;
    margin-left: auto;
    margin-right: auto;
    max-width: 490px;
    padding: 0 0.5rem;
  }

  .notApproved {
    width: 100%;
    max-width: 690px;
  }
</style>

<style is:global>
  /* Estilos adicionales para el video */
  #imageContainer {
    backdrop-filter: blur(2px);
    overflow: auto;
    width: 100%;
    height: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
    background-color: rgba(0, 0, 0, 0.8);
    padding: 8px;
    border-radius: 10px;
    display: none; /* Oculto por defecto */
  }

  #babyBillImage,
  #yoyoImage,
  #resurrectionImage,
  #notApproved,
  #lamarImage,
  #scientistImage, 
  #hl3Image,
  #sadleysBar {
    height: auto;
    display: none;
  }

  .visible {
    display: block !important;
  }

  .not-display {
    display: none !important;
  }

  @media (max-width: 500px) {
    .imagen {
      width: 21rem;
    }
  }

  @media (max-width: 370px) {
    .imagen {
      width: 18rem;
    }
  }
</style>
